</head>

<header>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <ul class="navbar-nav">
    <li class="nav-item active">
      <a class="nav-link" href="<%=root_path %>">EventBrite</a>
      <!-- <%= link_to "Eventbrite", root_path %> -->
    </li>
    <li class="nav-item">
      <a class="nav-link" href="<%=new_event_path %>">Créer un événement</a>
      <!-- <%= link_to "Créer un événement", new_event_path %> -->
    </li>
    <li class="nav-item">
      <!--<a class="nav-link" href="#">Link</a>-->

    <!-- Si l'utilisateur n'est pas connecté -->
    <% if !user_signed_in? %>
      <!-- Bouton dropdown avec 'Inscription/Connextion' si l'utilisateur n'est pas connecté -->
      <div class="dropdown">
      <button class="btn btn-light dropdown-toggle" type="button" data-toggle="dropdown">S'inscrire/Se connecter
      <span class="caret"></span></button>
      <ul class="dropdown-menu">
        
        <li><a href="<%= new_user_registration_path %>">Inscription</a></li>
        <li><a href="<%= new_user_session_path %>">Connection</a></li>
    
    <!-- Si l'utilisateur est connecté (i.e. si '!user_signed_in?' est false) -->
    <%else %>
      <!-- Bouton 'Mon profil' -->
      <div class="dropdown">
      <button class="btn btn-light dropdown-toggle" type="button" data-toggle="dropdown">Mon profil
      <span class="caret"></span></button>
      <ul class="dropdown-menu">
        
        <li><a href="<%= user_session_path %>">Mon profil</a></li>
        <li><a href="<%= destroy_user_session_path %>" data-method="delete" >Se déconnecter</a></li>

    <% end %>
     
    </ul>
  </div>
